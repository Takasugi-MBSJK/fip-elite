                            <td class="data right">@m.RequiredCount</td>
                        </tr>

                        foreach (var n in m.EntryData.OriginDetails)
                        {
                            <tr class="@(odd ? "zebraodd" : "zebraeven")">
                                <td class ="data indent" colspan="3">@n</td>
                            </tr>
                        }

                        odd = !odd;
                    }
                </tbody>
            </table>
        }
    }
</div>

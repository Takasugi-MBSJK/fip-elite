                    }
                    <tr>
                        <td class="caption center">Commodities</td>
                    </tr>
                </tbody>
            </table>

            displaydivider = true;

            <table class="zebratable">
                <tbody>
                    @foreach (var m in Model.MissingCommodity)
                    {
                        <tr class="@(odd ? "zebraodd" : "zebraeven")">

                        </tr>

                        foreach (var n in m.EntryData.OriginDetails)
                        {
                            <tr class="@(odd ? "zebraodd" : "zebraeven")">
                                <td class ="data indent" colspan="3">@n</td>
                            </tr>
                        }

                        odd = !odd;
                    }
                </tbody>
            </table>
        }
        if (Model.MissingCommodity.Count > 0)
        {
            odd = true;

            <table>
                <tbody>
                    @if (displaydivider)
                    {
                        <tr>
                            <td class="divider">&nbsp;</td>

                    </tr>
                </tbody>
            </table>

            displaydivider = true;

            <table class="zebratable">
                <tbody>
                    @foreach (var m in Model.MissingEncoded)
                    {
                        <tr class="@(odd ? "zebraodd" : "zebraeven")">
                            <td class="caption nowrap">@m.Name</td>
                            <td class="data right">@m.Inventory</td>

@using Elite
<div class="menu">

    @if (Model.CurrentPage == LCDPage.Home)
    {
        <table class="menu">
            <tbody>
                <tr>
                    <td><div class="@(Model.CurrentTab == LCDTab.Commander ? "highlight" : "")">CMDR</div></td>
                </tr>
                <tr>
                    <td><div class="@(Model.CurrentTab == LCDTab.Navigation ? "highlight" : "")">NAVIGATION</div></td>
                </tr>
                <tr>
                    <td>
                    @if (Model.TargetLocked)
                    {
                        <div class="@(Model.CurrentTab == LCDTab.Target ? "highlight" : "")">TARGET</div>
                    }
                    else
                    {
                        <div class="disabled">TARGET</div>
                    }
                    </td>
                </tr>
                <tr>
                    <td>
                    @if (Model.MissionCount > 0)
                    {
                        <div class="@(Model.CurrentTab == LCDTab.Missions ? "highlight" : "")">MISSIONS</div>
                    }
                    else
                    {
                        <div class="disabled">MISSIONS</div>
                    }
                    </td>
                </tr>
                <tr>
                    <td><div class="navigation">SHIP &#x25b6;</div></td>
                </tr>
                <tr>
                    <td><div class="navigation">LOCATIONS &#x25b6;</div></td>
                </tr>

            </tbody>
        </table>
    }
    else if (Model.CurrentPage == LCDPage.Ship)
    {
        <table class="menu">
            <tbody>
                <tr>
                    <td><div class="navigation">&#x25c0; BACK</div></td>
                </tr>
                <tr>
                    <td><div class="@(Model.CurrentTab == LCDTab.Ship ? "highlight" : "")">SHIP</div></td>
                </tr>
                <tr>
                    <td>
                        @if (Model.MaterialCount > 0)
                        {
                            <div class="@(Model.CurrentTab == LCDTab.Materials ? "highlight" : "")">MATERIALS</div>
                        }
                        else
                        {
                            <div class="disabled">MATERIALS</div>
                        }
                    </td>
                </tr>
                <tr>
                    <td>
                        @if (Model.CargoCount > 0)
                        {
                            <div class="@(Model.CurrentTab == LCDTab.Cargo ? "highlight" : "")">CARGO</div>
                        }
                        else
                        {
                            <div class="disabled">CARGO</div>
                        }
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="@(Model.CurrentTab == LCDTab.Events ? "highlight" : "")">EVENTS</div>
                    </td>
                </tr>
                <tr>
                    <td><div>&nbsp;</div></td>
                </tr>
            </tbody>
        </table>
    }
    else if (Model.CurrentPage == LCDPage.Locations)
    {
        <table class="menu">
            <tbody>
                <tr>
                    <td><div class="navigation">&#x25c0; BACK</div></td>
                </tr>
                <tr>
                    <td><div class="@(Model.CurrentTab == LCDTab.POI ? "highlight" : "")">POI</div></td>
                </tr>
                <tr>
                    <td><div class="@(Model.CurrentTab == LCDTab.Map ? "highlight" : "")">MAP</div></td>
                </tr>
                <tr>
                    <td><div class="@(Model.CurrentTab == LCDTab.Powers ? "highlight" : "")">POWERS</div></td>
                </tr>
                <tr>
                    <td><div class="@(Model.CurrentTab == LCDTab.Mining ? "highlight" : "")">MINING</div></td>
                </tr>
                <tr>
                    <td><div>&nbsp;</div></td>
                </tr>
            </tbody>
        </table>
    }
</div>

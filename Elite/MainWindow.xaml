<Window x:Class="Elite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:elite="clr-namespace:Elite"
        Closing="MainWindow_Closing"
        MouseDown="MainWindow_OnMouseDown"
        Title="fip-elite" Height="300" Width="500" SizeToContent="WidthAndHeight" ResizeMode="NoResize" 
        Left="{elite:SettingBinding Left}"
